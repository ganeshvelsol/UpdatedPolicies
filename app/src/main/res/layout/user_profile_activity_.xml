<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activties.UserProfileActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/first_name_update_profile"
                    android:hint="first name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/last_name_update_profile"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/business_name_update_profile"
                    android:hint="Business name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/email_update_profile"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/phone_update_profile"
                    android:hint="phone number"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/aadar_number_update_profile"
                    android:hint="Aadar number"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/pan_number_update_profile"
                    android:hint="Pan number"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/gst_update_profile"
                    android:hint="GST"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/address_update_profile"
                    android:hint="Address"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/city_update_profile"
                    android:hint="City"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/state_update_profile"
                    android:hint="State"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:background="@drawable/edittext_shapes"
                android:layout_margin="10dp"
                android:layout_height="50dp" >
                <EditText
                    android:id="@+id/postal_code_update_profile"
                    android:hint="postal code"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/update_profile"
                android:text="Update"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_adapter_shape"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />




            <TextView
                android:id="@+id/change_password"
                android:text="changePassword"
                android:textAllCaps="false"
                android:textColor="#123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="right"
                android:textSize="18sp"
                />

        </LinearLayout>



    </ScrollView>








</LinearLayout>